<div class="container" style="margin:50px auto">
    {{!-- fila 1--}}
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar
                    sesión
                    <i class="fas fa-sign-out-alt"></i>
                </a></p>
        </div>
    </div>
    {{!-- fin fila 1--}}
    {{!-- inicio fila 2--}}
    <div class="row">
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado de novedades</h2>
        </div>
        <div class="col-2 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
        </div>
        <div class="col-3 text-right">
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}>
                <button class="btn btn-secondary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
            </form>
        </div>
        {{!-- fin fila 2--}}
        {{!-- inicio fila 3--}}
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Título</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{titulo}}</td>
                            <td class="text-end">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-pencil-alt"></i></a>
                                <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                    <i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{#if is_search}}
                {{#unless novedades.length}}
                No se encontraron resultados para "<strong>{{q}}</strong>" 
                {{/unless}}
                {{/if}}
            </div>
        </div>
    </div>
</div>